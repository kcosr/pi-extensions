{
  "rules": {
    "mode": "local",
    "rules": [
      {
        "comment": "Block dangerous bash commands",
        "match": { "tool": "bash", "params.command": ["/rm\\s+-rf/", "/sudo/", "/shutdown/", "/reboot/"] },
        "action": "deny",
        "reason": "Dangerous commands (rm -rf, sudo, shutdown, reboot) are not allowed"
      },
      {
        "comment": "Manual approval for env files",
        "match": { "params.path": "/\\.env/" },
        "action": "manual"
      },
      {
        "comment": "Allow everything else",
        "action": "allow"
      }
    ]
  },
  "audit": {
    "mode": "file",
    "file": { "path": "/tmp/toolwatch.jsonl" }
  },
  "tools": []
}
